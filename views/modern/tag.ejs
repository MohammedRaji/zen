<%-include header%>
<div class="page" style="width: 900px; margin-top: 40px; margin-bottom: 40px; padding-left: 20px; padding-right: 20px; background-color: #CBCCCC;">
    <div class="page-header" style="border-bottom: 1px #2D89EF solid; padding-bottom: 20px;">
        <div class="page-header-content">
            <h1>TAG: <%= tag %></h1>
        </div>
    </div>
    <div class="page-region">
        <div class="page-region-content">
            <div>
                <ul class="unstyled">
                    <% var lastYear=0 %>
                    <% posts.forEach(function(post, index){ %>
                    <% if(lastYear!=post.time.year){ %>
                    <li><h3><%= post.time.year %></h3></li>
                    <% lastYear=post.time.year } %>
                    <li><time><%= post.time.day %></time> <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>
<%-include footer%>

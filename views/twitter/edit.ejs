<%-include header%>
<div class="navbar navbar-inverse navbar-fixed-top" style="filter:alpha(opacity=75);-moz-opacity:0.75;opacity:0.75;width:100%;display:block;">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="/"><%= siteName %></a>
            <div class="nav-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/archive">Archive</a></li>
                    <li><a href="/tags">Tags</a></li>
                    <li><a href="/about">About</a></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li><p class="navbar-text">Welcome back,
                        <a class="navbar-link" href="/u/<%= user.name %>"><%= user.name %></a>. </p></li>
                    <li class="active"><a class="navbar-link" href="/post-new">Post new</a></li>
                    <li><a class="navbar-link" href="/me">My posts</a></li>
                    <li><a class="navbar-link" href="/logout">Log out</a></li>
                    <li><a class="navbar-link" href="/rss"><strong>RSS</strong></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <% if (locals.success) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <% } %>
    <% if (locals.error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>
    <div>
        <ul class="breadcrumb">
            <li><a href="/">Home</a> <span class="divider">/</span></li>
            <li class="active">Edit: <%= post.title %></li>
        </ul>
    </div>
    <div>
        <fieldset>
            <div>
                <form name="post" method="post" onchange="window.onbeforeunload = confirmExit;">
                    <br />
                    <input type="text" name="title" value="<%= post.title %>"  />
                    <br />
                    <input type="text" name="tag" class='input' value="<%= tags %>" />
                    <br />
                    <textarea name="post" class='span12' style="min-height: 350px;"><%- post.content %></textarea>
                    <br />
                    <input type="submit" class="btn btn-primary" value="Save" onclick="window.onbeforeunload = null;" />
                </form>
            </div>
        </fieldset>
    </div>
</div>
<script type="text/javascript">
    function confirmExit(){
        return 'You have make changes on this page.\n' +
                'If you are going to leave this page, your unsaved changes will be lost.';
    }
</script>
<%-include footer%>
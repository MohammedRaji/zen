<%-include header%>
<div class="navbar navbar-inverse navbar-fixed-top" style="filter:alpha(opacity=75);-moz-opacity:0.75;opacity:0.75;width:100%;display:block;">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="/"><%= siteName %></a>
            <div class="nav-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/archive">Archive</a></li>
                    <li><a href="/tags">Tags</a></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <% if(!user) { %>
                    <li><a href="/login">Login</a></li>
                    <% if(allowReg) { %>
                    <li><a href="/reg">Register</a></li>
                    <% }} else { %>
                    <li><p class="navbar-text">Welcome back,
                        <a class="navbar-link" href="/u/<%= user.name %>"><%= user.name %></a>. </p></li>
                    <li><a class="navbar-link" href="/post-new">Post new</a></li>
                    <li><a class="navbar-link" href="/me">My posts</a></li>
                    <li><a class="navbar-link" href="/logout">Log out</a></li>
                    <% } %>
                    <li><a class="navbar-link" href="/rss"><strong>RSS</strong></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <% if (locals.success) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <% } %>
    <% if (locals.error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>
<div>
    <ul class="breadcrumb">
        <li><a href="/">Home</a> <span class="divider">/</span></li>
        <li><a href="/u/<%= post.name %>"><%= post.name %></a> <span class="divider">/</span></li>
        <li class="active"><%= post.title %></li>
    </ul>
</div>
<div>
    <fieldset>
        <div>
            <div class="row">
                <div class="span8">
                    Author: <a href="/u/<%= post.name %>"><%= post.name %></a> |
                    Date: <%= post.time.minute %> |
                    Tags:
                    <% post.tags.forEach(function(tag, index){ %>
                    <% if(tag.tag){ %>
                    <a href="/tags/<%= tag.tag %>"><span class="label label-info"><%= tag.tag %></span></a>
                    <% } %>
                    <% }) %>
                    | Views: <span class="badge badge-important"><%= post.views %></span>
                </div>
                <div class="span2 pull-right">
                    <% if(user) { %>
                    <% if(user.name === post.name) { %>
                    <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.url %>/edit" style="text-decoration: none;">
                        <button class="btn btn-small" type="button">Edit</button>
                    </a>
                    <button class="btn btn-danger btn-small" type="button" onclick="confirmDelete()">Delete</button>
                    <% }} %>
                </div>
            </div>
            <hr />
            <div><%- post.content %></div>
        </div>
        <div>
            <%-include comment%>
        </div>
    </fieldset>
</div>
</div>
<script type="text/javascript">
    function confirmDelete() {
        if (confirm("Do you really want to delete this post?\nThis operation cannot be recover.")) {
            window.location = "/u/<%= post.name %>/<%= post.time.day %>/<%= post.url %>/delete";
        }
    }
</script>
<%-include footer%>